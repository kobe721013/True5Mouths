<%= puts "app/views/drinks/show.html.erb Start"%>
<div class="col-md-12">
  <div class="group">
    <%= link_to("Edit", edit_drink_path(@drink), class: "btn btn-primary pull-right")%>
  </div>
  <h2><%= @drink.name %></h2>
  <p><%= @drink.price %></p>
  <p><%= @drink.description %></p>

 <table class="table">
   <thead>
     <tr>
       <th>Comment</th>
       <th colspan="2"></th>
     </tr>
   </thead>
   <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.content %></td>
         <td>
           <%= link_to("Edit", edit_group_post_path(post.group, post),
                       class: "btn btn-default btn-xs")%>
           <%= link_to("Delete", group_post_path(post.group, post),
                       class: "btn btn-default btn-xs ", method: :delete, 
                       data: { confirm: "Are you sure?" } )%>
         </td>
       </tr>
     <% end %>
   </tbody>
 </table>

</div>

